@model List<Business.Entities.Patient>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="clearfix">
    <div class="box">
        <h4>Patients</h4>
    </div>
    <div class="box">
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
    </div>
</div>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.FirstOrDefault().FirstName)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.FirstOrDefault().MI)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.FirstOrDefault().LastName)
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MI)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td class="fitwidth">
                @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "glyphicon glyphicon-edit", title = "Edit" })
                @Html.ActionLink(" ", "Details", new { id = item.Id }, new { @class = "glyphicon glyphicon-search", title = "Details" })
                @Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class = "glyphicon glyphicon-trash", title = "Delete" })
            </td>
        </tr>
        }
    </tbody>
</table>

