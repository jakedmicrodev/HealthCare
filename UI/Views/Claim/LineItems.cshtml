@model List<Business.Entities.LineItem>

@{
    Layout = "";
}


<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().ServiceDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Service)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().CopayAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().OwedAmount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Service)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CopayAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OwedAmount)
            </td>
            <td class="fitwidth">
                @Html.ActionLink(" ", "Edit", "LineItem", new { id = item.Id }, new { @class = "glyphicon glyphicon-edit", title = "Edit" })
                @Html.ActionLink(" ", "Delete", "LineItem", new { id = item.Id }, new { @class = "glyphicon glyphicon-trash", title = "Delete" })
                @Html.ActionLink(" ", "CreateInvoice", "Invoice", new { id = item.Id }, new { @class = "glyphicon glyphicon-list-alt", title = "New Invoice" })
                @Html.ActionLink(" ", "CreatePrescription", "Prescription", new { id = item.Id }, new { @class = "glyphicon glyphicon-plus-sign", title = "New Prescription" })
            </td>
        </tr>
        }
    </tbody>
    <tfoot class="tfoot-dark">
        <tr>
            <td>@Model.Count()</td>
            <td></td>
            <td>@Model.Sum(i => i.CopayAmount)</td>
            <td>@String.Format("{0:0.00}", Model.Sum(i => i.OwedAmount)) </td>
            <td></td>
        </tr>
    </tfoot>
</table>
