@model List<Business.Entities.LineItem>

@{
    Layout = "";
}


<table class="table table-striped table-bordered">
    <thead class="thead-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().ServiceDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Service)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().CopayAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().OwedAmount)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ServiceDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Service)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CopayAmount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OwedAmount)
                </td>
            </tr>
        }
    </tbody>
    <tfoot class="tfoot-light">
        <tr>
            <td>@Model.Count()</td>
            <td></td>
            <td>@Model.Sum(i => i.CopayAmount)</td>
            <td>@String.Format("{0:0.00}", Model.Sum(i => i.OwedAmount)) </td>
        </tr>
    </tfoot>
</table>
